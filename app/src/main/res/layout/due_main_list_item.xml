<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mainLLID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28sdp"
        android:background="#f2f2f2"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:gravity="center_vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/particularTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:text="Total Due Amount"
                android:textColor="@color/edit_7"
                android:textSize="@dimen/_9ssp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:gravity="center_vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/scheduleDateTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:textColor="@color/edit_7"
                android:textSize="@dimen/_9ssp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:gravity="center_vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/scheduleAmountTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/edit_7"
                android:textSize="@dimen/_9ssp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="center_vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/paidAmountTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:textColor="@color/edit_7"
                android:textSize="@dimen/_9ssp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.9"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/paidDateTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:textColor="@color/edit_7"
                android:textSize="@dimen/_9ssp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/edit_b"/>

</LinearLayout>